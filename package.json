{
    "name": "assistant",
    "displayName": "Assistant - Realtime Linter & Quality Assurance For Your Team",
    "keywords": [
        "productivity",
        "visual studio code",
        "rules",
        "notes",
        "uberlinter",
        "regex"
    ],
    "icon": "images/assistant.png",
    "description": "Never do the same mistake again",
    "version": "0.14.0",
    "publisher": "tomasz-smykowski",
    "repository": {
        "type": "git",
        "url": "https://github.com/tomaszs/Assistant.git"
    },
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Linters",
        "Other",
        "Programming Languages",
        "Debuggers"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "properties": {
                "assistant": {
                    "type": "object",
                    "properties": {
                        "modifiers": {
                            "type": "string",
                            "default": "g"
                        },
                        "rules": {
                            "type": "array",
                            "default": [],
                            "items": {
                                "properties": {
                                    "regex": {
                                        "type": "string"
                                    },
                                    "message": {
                                        "type": "string"
                                    },
                                    "modifiers": {
                                        "type": "string",
                                        "default": "g"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "scripts": {
        "publish": "vsce package && vsce publish minor",
        "build": "vsce package",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^12.12.54",
        "@types/vscode": "^1.48.0",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "eslint": "^7.7.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "source-map-support": "^0.5.12",
        "typescript": "^3.9.7",
        "vscode-test": "^1.3.0"
    }
}
